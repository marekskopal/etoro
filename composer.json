{
    "name": "marekskopal/etoro",
    "type": "library",
    "description": "eToro API client library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marek Skopal",
            "homepage": "https://www.marekskopal.cz"
        }
    ],
    "require": {
        "php": ">=8.4.1",
        "php-http/discovery": "^1.19",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.1 || ^2.0",
        "ramsey/uuid": "^4.9"
    },
    "require-dev": {
        "php-http/guzzle7-adapter": "^1.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^13.0",
        "slevomat/coding-standard": "^8.14",
        "spatie/ray": "^1.39"
    },
    "suggest": {
        "nyholm/psr7": "PSR-7 message implementation",
        "symfony/http-client": "HTTP client"
    },
    "autoload": {
        "psr-4": {
            "MarekSkopal\\Etoro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarekSkopal\\Etoro\\Tests\\": [
                "tests/"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.4.1"
        },
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
